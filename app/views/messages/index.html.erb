<div class="panel panel-primary">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <table class="table">
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td id="name"><span class="label label-primary"><%= message.name %></span></td>
          <td id="msg"><%= message.body %></td>
          <td><%= message.age %></td>
          <td>(<%= link_to "edit" , edit_message_path(message) %>
          <%= link_to "destroy" , message , method: :delete, data: { confirm:'削除してもよろしいですか？' } %>)</td>
        </tr>
      <% end %>
		</tbody>
	</table>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
